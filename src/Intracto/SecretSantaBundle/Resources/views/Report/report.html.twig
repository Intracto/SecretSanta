{% extends "IntractoSecretSantaBundle::base.html.twig" %}
{% block metadata %}
    <meta name="robots" content="noindex, nofollow">
{% endblock %}
{% block main %}
    <h1>Report</h1>

    <div class="reportLeft">
        <h2>{{ 'report.pool_amount'|trans }}</h2>
        <p><strong>{{ pools|length }}</strong></p>
    </div>

    <div class="reportMid">
        <h2>{{ 'report.user_amount'|trans }}</h2>
        <p><strong>{{ entries|length }}</strong></p>
    </div>

    <div class="reportRight">
        <h2>{{ 'report.average_user_amount'|trans }}</h2>
        <p><strong>{{ entries|length // pools|length }}</strong></p>
    </div>
    <div class="clearfix">

    </div>
{% endblock %}